<?xml version="1.0" encoding="ISO-8859-1" ?>

<dbforms-config>
    <!-- ========== Connection =================================== -->
    <!--
    uncomment this if you have access to JNDI of an application server (see users guide for more info)
    <dbconnection
        name = "jdbc/dbformstest"
        isJndi = "true"
    />
    -->
    
    <table name="AUTHOR">
        <field name="AUTHOR_ID" fieldType="int" size="10" isKey="true" autoInc="false"/>
        <field name="NAME" fieldType="varchar" size="50"/>
        <field name="ORGANISATION" fieldType="varchar" size="50"/>

        <!-- add "granted-privileges" element for security constraints -->

    </table>    
    
    <table name="BOOK">
        <field name="BOOK_ID" fieldType="int" size="10" isKey="true" autoInc="false"/>
        <field name="ISBN" fieldType="varchar" size="15"/>
        <field name="AUTHOR_ID" fieldType="int" size="10"/>
        <field name="TITLE" fieldType="varchar" size="255"/>

        <!-- add "granted-privileges" element for security constraints -->

    </table>    
    
    <!-- When using hsqldb from Cactus, it seems to need the full path.  Not sure why...-->
    <dbconnection
        name   = "jdbc:hsqldb:C:/java/dbforms/target/cactus/tomcat4x/webapps/test/WEB-INF/hsqldb/hsqldb"
        isJndi = "false"
        conClass  = "org.hsqldb.jdbcDriver"
        username = "sa"
        password  = ""
    />
</dbforms-config>
