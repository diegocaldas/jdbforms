<project name="dbforms" default="copymavenfiles" basedir=".">
    <!-- 
    	Simple script to copy necessary files from dependend directory to 
    	maven repository
    	Call this script before you first start maven!
    -->
    <property name="dependend.dir" value="./dependend"/>
    <property environment="env"/>
    <property name="maven.dir" value="${env.MAVEN_HOME}/repository"/>

  <target name="copymavenfiles">
          
              <!-- copy all files needed to release directory -->
      <copy todir="${maven.dir}/cos/jars" >
        <fileset dir="${dependend.dir}" includes="cos.jar"/>
     </copy>
      <copy todir="${maven.dir}/jasperreports/jars" >
        <fileset dir="${dependend.dir}" includes="jasperreports-0.4.5.jar"/>
     </copy>
      <copy todir="${maven.dir}/protomatter/jars" >
        <fileset dir="${dependend.dir}" includes="protomatter-1.1.8-pre5.jar"/>
     </copy>
  </target>
</project>
