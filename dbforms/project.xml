    <!-- 
       -  j2ee.jar is used to compile the GUI for DbForms, it provides
       -  the varios javax.xml classes like Streamer and TransformationFactory.
       -  It is not needed by the webapp, and can be commented out.
       -->    
    <dependency>
      <id>j2ee</id>      
      <jar>j2ee.jar</jar>
    </dependency>


    <!-- 
       -  jdbc2_0-stdext.jar is used to compile JakartaConnectionProvider class
       -  (it uses a Datasource object instead of DriverManager).
       -  J2SE JDK1.4.x includes this class into its core libraries;
       -  J2SE JDK1.3.x no.
       -
       -  http://java.sun.com/products/jdbc/download.html#binary
       -  I think the name in Maven land has changed to just jdbc. - DEP
       -->
    <dependency>
      <id>jdbc</id>
      <version>2.0</version>
      <properties>        
        <war.bundle.jar>true</war.bundle.jar>
      </properties>
    </dependency>

