    <unitTestSourceDirectory>tests/test</unitTestSourceDirectory>
    <aspectSourceDirectory></aspectSourceDirectory>
    <integrationUnitTestSourceDirectory>tests/test-bookstore</integrationUnitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
        <include>**/Test*.java</include>        
      </includes>
      <!-- Test resources -->      
      <resources>
        <resource>
          <directory>tests/test</directory>
          <includes>
            <include>**/*.txt</include>
          </includes>
        </resource>
      </resources>  
    </unitTest>
      <resources>
        <resource>
